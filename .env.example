# Shopify Configuration
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_token
SHOPIFY_ADMIN_ACCESS_TOKEN=your_admin_token

# Store Password Protection
# Set to "true" to enable password protection for the store
# When enabled, users must enter the correct password to access the store
STORE_PASSWORD_ENABLED=false

# The password users must enter to access the store (when STORE_PASSWORD_ENABLED=true)
# NOTE: This is different from Shopify's built-in password protection
SHOPIFY_STORE_PASSWORD=your_store_password
